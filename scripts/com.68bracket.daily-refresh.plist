<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.68bracket.daily-refresh</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/hunter.walklin/Personal/68bracket/scripts/daily_refresh.sh</string>
    </array>

    <!-- Run daily at 6:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- If the Mac was asleep at 6 AM, run when it wakes up -->
    <key>StartInterval</key>
    <integer>86400</integer>

    <key>StandardOutPath</key>
    <string>/Users/hunter.walklin/Personal/68bracket/logs/launchd_stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/hunter.walklin/Personal/68bracket/logs/launchd_stderr.log</string>

    <key>WorkingDirectory</key>
    <string>/Users/hunter.walklin/Personal/68bracket</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>
</dict>
</plist>
